#!/usr/bin/ctr

question := 'Who are you?'.
answer   := 'I am Jake!'.

json := JSONObject new.

json addObject: 'question' value: question.
json addObject: 'answer'   value: answer.

Pen write: ((json toString: 'PRETTY') + '\n').

Pen write: ((json toString: 'SPACED' and: 'PRETTY') + '\n').

json put.
